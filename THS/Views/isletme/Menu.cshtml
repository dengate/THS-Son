@using THS.Models;


@{
    ViewBag.Title = "Menu";
    List<urun> arda = ViewData["urunler2"] as List<urun>;
}
<!DOCTYPE html>

<html>
<head>
    <link rel="shortcut icon" href="/resimler/icon.ico" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/Scripts/css/menucubuk.css" rel="stylesheet" />
    <link href="~/Scripts/css/ustmenu.css" rel="stylesheet" />
    <link href="~/Scripts/css/Popup.css" rel="stylesheet" />
    <script src="~/Scripts/js/isletmemenu.js"></script>
    <link href="~/Scripts/css/isletmemenu.css" rel="stylesheet" />
</head>

<body>
    <div class="ustmenu">
        <div class="container-fluid menu">
            <div class="container">
                <div class="logodiv">
                    <img class="logo" src="/resimler/logo5.png" />
                </div>
                <div>
                    <a class="btn" id="girisbuton" style="opacity: 1;" href="/isletme/AnaSayfa">
                        <button class="girisbuton">Geri</button></a>
                </div>
                <div>
                    <a class="btn" id="ktgr" style="opacity: 1;">
                        <button style="margin-right: 10px; width: 150px;" class="girisbuton">Kategori Ekle</button></a>
                </div>
                <div>
                    <a class="btn" id="altktgr" style="opacity: 1;">
                        <button style="margin-right: 10px; width: 150px;" class="girisbuton">AltKategori Ekle</button></a>
                </div>
            </div>
        </div>
    </div>

    <div class="containers2">
        @foreach (var a in arda)
        {
            <div class="card">
                <div id="id" style="display: none">@a.Urun_ID</div>
                <a class="close" id="sil">&times;</a>
                <div class="img">
                    <img src="~/Fotograflar/@a.Urun_resmi"/ >
                </div>
                <div class="price" id="urunadi2">
                    Ürün Adı :<span id="urunadi"> @a.Urun_adi</span>
                    <br>
                </div>
                <div class="price">
                    Ürün Fiyatı :<span id="urunfiyati"> @a.Urun_fiyati</span>
                    <br>
                </div>
                <div class="price">
                    Ürün Açıklaması :<span id="urunaciklamasi"> @a.Urun_aciklamasi</span>
                    <br>
                </div>
                <div class="price">
                    Ürün Kalorisi :<span id="urunkalorisi"> @a.Urun_kalorisi</span>
                    <br>
                </div>
                <div class="price">
                    Ürün Pişme Süresi :<span id="urunpisme"> @a.Urun_pismeSuresi</span>
                    <br>
                </div>

                <div class="box">
                    <a class="button" id="buton">Ürünü Güncelle</a>
                </div>
            </div>
        }
    </div>
    <div class="modal1">
        <div id="popupid" style="display: none"></div>
        <div class="creditcard-box">
            <div class="carpi"><a class="close">&times;</a></div>
            <div class="boxdiv2">
                <div class="name-box-ust">
                    <div class="box-yazi">Ürünün Yeni Adı</div>
                    <div class="box-input">
                        <input style="width: 100%" type="text" id="popupad2" name="popupad2"></input>
                    </div>
                </div>
            </div>
            <div class="boxdiv2">
                <div class="name-box-ust">
                    <div class="box-yazi">Ürünün Yeni Fiyatı</div>
                    <div class="box-input">
                        <input style="width: 100%" type="text" id="popupfiyat2" name="popupfiyat2"></input>
                    </div>
                </div>
            </div>
            <div class="boxdiv2">
                <div class="name-box-ust">
                    <div class="box-yazi">Ürünün Yeni Açıklaması</div>
                    <div class="box-input">
                        <input style="width: 100%" type="text" id="popupaciklama2" name="popupaciklama2"></input>
                    </div>
                </div>
            </div>
            <div class="boxdiv2">
                <div class="name-box-ust">
                    <div class="box-yazi">Ürünün Yeni Kalorisi</div>
                    <div class="box-input">
                        <input style="width: 100%" type="text" id="popupkalori2" name="popupkalori2"></input>
                    </div>
                </div>
            </div>
            <div class="boxdiv2">
                <div class="name-box-ust">
                    <div class="box-yazi">Ürünün Yeni Pişme Süresi</div>
                    <div class="box-input">
                        <input style="width: 100%" type="text" id="popuppisme2" name="popuppisme2"></input>
                    </div>
                </div>
            </div>
            <div class="boxdiv2">
                <div class="name-box-ust">
                    <div class="box-yazi">Alt Kategori</div>
                    <select class="form-control form-control-lg altktgr" id="AltKategoriSecim" style="width: 100%;">
                        
                    </select>
                </div>
            </div>
            <div class="boxdiv2">
                <div class="odemebutonbox" id="guncelle">
                    <div class="odemebutonyazi">Güncelle</div>
                </div>
            </div>
        </div>


    </div>
    <div class="modal2">
        <div id="Detaypup" class="Detay">
            <div class="carpi2"><a class="close2">&times;</a></div>
            <div id="detayurunid" style="display: none;"></div>
            <div style="text-align: center; height: 190px;">
                <div id="detayazi" style="margin-top: 10px; width: 100%; height: 100px; overflow: auto; margin-bottom: 30px;">
                    <div id="detaypuan" style="width: 80%; margin: auto; margin-bottom: 15px"></div>
                    <div id="detayaciklama" style="width: 80%; margin: auto">Emin Misiniz?</div>
                </div>
                <div style="width: 100%;">
                    <div id="yorumlar" class="yorumlarbutonu">
                        <div style="margin: auto; padding-top: 10px;">Sil</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal3">
        <div class="Detay">
            <div class="carpi2"><a class="close2">&times;</a></div>
            <div style="text-align: center; height: 190px;">
                <div style="margin-top: 10px; width: 100%; height: 100px; overflow: auto; margin-bottom: 30px;">
                    <div style="width: 80%; margin: auto; margin-bottom: 15px"></div>
                    <div style="width: 80%; margin: auto">Kategori Adını Giriniz</div>
                    <div class="box-input">
                        <input style="width: 90%" type="text" id="ktgradi" name="ktgradi" />
                    </div>
                </div>
                <div style="width: 100%;">
                    <div id="ktgrekle" class="yorumlarbutonu">
                        <div style="margin: auto; padding-top: 10px;">Ekle</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal4">
        <div class="Detay">
            <div class="carpi2"><a class="close2">&times;</a></div>
            <div id="altktgrdiv" style="text-align: center; height: 190px;">
                <div id="altktgrdiv2" style="margin-top: 10px; width: 100%; height: 100px; overflow: auto; margin-bottom: 30px;">
                    <div style="width: 80%; margin: auto; margin-bottom: 15px"></div>
                    <div style="width: 80%; margin: auto">AltKategori Adını Giriniz</div>
                    <div class="box-input">
                        <input style="width: 90%" type="text" id="altktgradi" name="altktgradi" />
                    </div>
                    <div style="width: 80%; margin: auto">Kategori Seçiniz</div>
                    <select class="form-control form-control-lg altktgr" id="KategoriSecim">
                    </select>
                </div>
                <div style="width: 100%;">
                    <div id="altktgrekle" class="yorumlarbutonu">
                        <div style="margin: auto; padding-top: 10px;">Ekle</div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>

